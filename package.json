{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "echo 'Backend build complete - no compilation needed'",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "migrate:display-order": "node scripts/migrate-display-order.js",
    "debug:db": "node scripts/debug-database.js",
    "test:display-order": "node scripts/test-display-order.js",
    "check:display-order": "node scripts/check-display-order.js",
    "fix:display-order": "node scripts/fix-display-order.js",
    "fix:display-order-v2": "node scripts/fix-display-order-v2.js",
    "test:mailchimp": "node scripts/test-mailchimp.js",
    "test:notify-mailchimp": "node scripts/test-notify-mailchimp.js",
    "job:send-cart-reminders": "node scripts/send-cart-reminders.js",
    "add:indexes": "node scripts/add-indexes.js",
    "test:performance": "node scripts/performance-test.js",
    "add:special-products-indexes": "node scripts/create-special-products-indexes.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.820.0",
    "@aws-sdk/s3-request-presigner": "^3.820.0",
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "pdfkit": "^0.13.0",
    "slugify": "^1.6.6",
    "stripe": "^18.2.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/scripts/**",
      "!server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
